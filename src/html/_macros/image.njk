{% set imageRoot = '/assets/img/' %}

{% macro image(src, alt='', root=false, className=false) %}
   {% set classCode = 'class=' + className %}

   <img
      src="{{ root if root else imageRoot }}{{ src }}"
      alt="{{ alt }}"
      {{ classCode if className |safe }}
   >
{% endmacro %}

{% macro circle(src, alt='', root=false) %}
   {{ image(src, alt, root, 'circle') }}
{% endmacro %}

{% macro picture(jpg=false, webp=false, png=false, alt='', className=false) %}
   {% set classCode = 'class=' + className %}

   <picture>
      {% if webp %}
         <source srcset="{{ imageRoot }}{{ webp }}" type="image/webp">
      {% endif %}

      {% if jpg %}
         <source srcset="{{ imageRoot }}{{ jpg }}" type="image/jpeg">
      {% endif %}

      {% if png %}
         <source srcset="{{ imageRoot }}{{ png }}" type="image/png">
      {% endif %}

      <img src="{{ imageRoot }}{{ png if png else jpg }}" alt="{{ alt }}" {{ classCode if className |safe }}>
   </picture>
{% endmacro %}
