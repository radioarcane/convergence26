<!doctype html>
<html lang="{{ language }}" class="no-js no-webp">
   <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width,initial-scale=1">

      {% block meta %}
         {% include "_partials/meta.njk" %}
      {% endblock %}

      {% include "_partials/favicons.njk" %}

      {% block styles %}
         {% include "_partials/styles.njk" %}
      {% endblock %}

      {% block custom_styles %}{% endblock %}
   </head>
   <body>
      <div id="page-content">
         {% include "_components/header.njk" %}

         {% block hero %}
         {% endblock %}

         <main class="main-content" role="main">
            {% block main %}
            {% endblock %}
         </main>

         {% include "_components/footer.njk" %}

         {% block footer_scripts %}
            {% include "_partials/footer-scripts.njk" %}
         {% endblock %}

         {% block custom_scripts %}{% endblock %}
      </div>
   </body>
</html>
